    "bcrypt": "^4.0.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.9.2"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^2.0.2"
  }
